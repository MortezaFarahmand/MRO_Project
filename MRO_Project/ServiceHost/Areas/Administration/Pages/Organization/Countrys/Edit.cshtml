@model OrganizationManagement.Application.Contracts.Country.EditCountry
@{
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h4 class="modal-title">Edit Country " @Model.Name " </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">

    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UNCode" class="control-label">UNCode</label>
                    <input type="text" class="form-control" asp-for="UNCode">
                    <span asp-validation-for="UNCode" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">Picture</label>
                    <input type="text" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Alpha2Code" class="control-label">Alpha 2 Code</label>
                    <input type="text" class="form-control" asp-for="Alpha2Code">
                    <span asp-validation-for="Alpha2Code" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Alpha3Code" class="control-label">Alpha 3 Code</label>
                    <input type="text" class="form-control" asp-for="Alpha3Code">
                    <span asp-validation-for="Alpha3Code" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DialCode" class="control-label">Dial-Code</label>
                    <input type="text" class="form-control" asp-for="DialCode">
                    <span asp-validation-for="DialCode" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TailCode" class="control-label">Tail-Code</label>
                    <input type="text" class="form-control" asp-for="TailCode">
                    <span asp-validation-for="TailCode" class="error"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id" />

    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">Edit</button>
    </div>
</form>